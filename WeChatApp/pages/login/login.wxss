page {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 100%;
  background: url('http://p88kzenjw.bkt.clouddn.com/login_bg.9.png') no-repeat ;
  background-size: 100% 100%;
  margin-top: -2px;
}

.content-top {
  padding-top: 80rpx;
}

.content-head {
  width: 200rpx;
  height: 160rpx;
  margin-left: 280rpx;

}

.content-head image {
  width: 200rpx;
  height: 160rpx;
}

.content-input {
  width: 88%;
  margin-left: 6%;
  margin-right: 6%;
  margin-top: 60rpx;
  color: white
}

.content-input-info {
  width: 100%;
  height: 75rpx;
  border-bottom: 0.5rpx solid #fff;
  margin-top: 40rpx;
  display: flex;
  justify-content: flex-start;
}

.content-input-img {
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.content-input-img image {
  width: 40rpx;
  height: 40rpx;
}

.phone {
  margin-top: 10rpx;
  color: #fff;
  font-size: 14px;
}

.password {
  margin-top: 10rpx;
  color: #fff;
  font-size: 14px;
}

.content-input-in {
  color: #fff;
  font-size: 14px;
}

.content-state {
  width: 52%;
  text-decoration: underline;
  margin-top: 20rpx;
  color: #fff;
  font-size: 14px;
}

.content-bottom {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #fff;
  letter-spacing: 1.5px;
  height: 70rpx;
  line-height: 70rpx;
}

.forget_btn{
  width: 25%;
  display: flex;
}

.content-bottom-right {
  display: flex;
  justify-content: flex-end;
}

.content-bottom-right-in {
  width: 160rpx;
  background: #48CEE6;
  border-radius: 8px;
  display: flex;
  color: #48CEE6;
  justify-content: center;
  margin-left: 15rpx;
}

.content-bottom-right-in text {
  color: #48CEE6;
  letter-spacing: 1.5px;
}


.login{
  margin-top: 80px;
  background-color: #48CEE6;
  color: white;
}

.bottom-btn {
  margin-top: 150rpx;
  width: 50%;
  margin-left: 25%;
  margin-right: 25%;
  border: 1px solid #48CEE6;
  height: 80rpx;
  border-radius: 25px;
  display: flex;
  justify-content: center;
}

.bottom-btn text {
  font-size: 12px;
  color: #48CEE6;
  line-height: 80rpx;
  text-align: center;
  letter-spacing: 1.5px;
}
